# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/edtodo_technovations
MONGODB_TEST_URI=mongodb://localhost:27017/edtodo_technovations_test

# Authentication
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRY=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_key_change_in_production
REFRESH_TOKEN_EXPIRY=30d

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password
EMAIL_FROM=no-reply@edtodo.tech

# File Upload Settings
UPLOAD_DIR=server/public/uploads
MAX_FILE_SIZE=10485760

# Supabase Configuration (Optional)
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_key

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# API Keys for External Services
ANALYTICS_API_KEY=your_analytics_api_key
TENDER_API_KEY=your_tender_api_key

# Eprocure integration settings
TENDER_API_URL=https://api.tender-source.gov/tenders
USE_FALLBACK_DATA=true
SYNC_INTERVAL_MINUTES=30 